{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "sourceMap": true,
        "noEmit": true,
        "paths": {
            "$lib/*": [
                "src/lib/*"
            ],
            "$lib/components/*": [
                "src/lib/components/*"
            ],
            "$lib/components/ui/*": [
                "src/lib/components/ui/*"
            ],
            "$lib/utils/*": [
                "src/lib/utils/*"
            ],
            "$lib/hooks/*": [
                "src/lib/hooks/*"
            ]
        }
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}